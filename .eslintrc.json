{
  "extends": [ "eslint:recommended", "next/core-web-vitals" ],
  "rules": {
    "arrow-parens": [ 2, "as-needed" ],
    "comma-dangle": ["error", "always-multiline"],
    "keyword-spacing": [ 2, { "after": true, "overrides": { "if": { "after": false }, "return": { "after": false }}}],
    "no-multi-spaces": [ 2 ],
    "object-curly-spacing": [ 2, "always" ],
    "quotes": [2, "double", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "react/jsx-curly-spacing": [ 2, { "when": "always", "allowMultiline": true, "children": true, "spacing": { "objectLiterals": "always" }} ],
    "semi": [ 2, "always" ],
    "space-in-parens": [2, "always", { "exceptions": ["{}"] }],
    "space-before-blocks": [2, "never"]
  }
}
